<p id="notice"><%= notice %></p>

<h1 class="text-info">Images</h1>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Imageable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.image %></td>
        <td><%= image.imageable %></td>
        <td><%= link_to 'Show', image %></td>
        <% if image.imageable_type == "Post"%>
          <td><%= link_to 'Destroy', post_image_path(image.imageable.id,image), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to 'Destroy', comment_image_path(image.imageable.id,image), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if params.has_key?(:comment_id)%>
  <%= link_to 'New image', new_comment_image_path(params[:comment_id])%> |
<% elsif params.has_key?(:post_id) %>
  <%= link_to 'New image', new_post_image_path(params[:post_id])%> |
<% end %>

<%= link_to 'Back', root_path %>
